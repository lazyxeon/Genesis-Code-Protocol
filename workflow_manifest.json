{
  "$schema": "https://example.com/schemas/workflow_manifest_v1.json",
  "id": "bwb::build-pipeline-stabilizer::v1",
  "version": "1.0.0",
  "business_goal": "Ensure reliable build and push pipeline",
  "value_hypothesis": "Reliable pipelines reduce release failures and improve developer velocity",
  "inputs": [
    {"name": "source", "type": "git", "source": "github", "validation": "branch_protection"}
  ],
  "outputs": [
    {"name": "image", "type": "file", "retention_days": 90, "consumer": "platform-team"}
  ],
  "SLOs": {"latency_ms_p95": 1200, "success_rate": 0.99, "error_budget_month": 0.01},
  "constraints": ["must run in existing CI", "no external paid services"],
  "operational_env": "container",
  "security": {
    "data_classes": ["internal"],
    "secrets": ["ENV:REGISTRY_TOKEN"],
    "iam": [{"principal": "workflow-sa", "permissions": ["read:repo", "write:registry"]}],
    "supply_chain": {"sbom": true, "signing": "sigstore", "policy": "fail_on_critical"}
  },
  "compliance": {"pii": false, "gdpr": "n/a", "sox": "n/a", "hipaa": false},
  "tooling": {
    "images": ["ghcr.io/org/build-pipeline-stabilizer:1.0.0"],
    "runtimes": ["python3.11"],
    "libraries": ["pydantic", "pytest", "opentelemetry-sdk"]
  },
  "steps": [
    {
      "name": "ingest",
      "kind": "task",
      "entrypoint": "src/ingest.py:main",
      "contracts": {"in": ["inputs[*]"], "out": ["stage_raw"]},
      "retries": {"max": 3, "backoff": "exponential", "jitter": true},
      "timeout_s": 60,
      "idempotency_key": "hash(input)",
      "resources": {"cpu": "500m", "mem": "512Mi"},
      "metrics": {"counters": ["records_ingested"], "timers": ["duration_ms"]},
      "otel_spans": ["bwb.ingest"]
    },
    {
      "name": "build",
      "kind": "task",
      "entrypoint": "src/build.py:main",
      "contracts": {"in": ["stage_raw"], "out": ["artifact"]},
      "retries": {"max": 1, "backoff": "linear", "jitter": false},
      "timeout_s": 120,
      "idempotency_key": "hash(stage_raw)",
      "resources": {"cpu": "1", "mem": "1Gi"},
      "metrics": {"counters": ["builds"], "timers": ["duration_ms"]},
      "otel_spans": ["bwb.build"]
    },
    {
      "name": "push",
      "kind": "task",
      "entrypoint": "src/push.py:main",
      "contracts": {"in": ["artifact"], "out": ["image"]},
      "retries": {"max": 2, "backoff": "exponential", "jitter": true},
      "timeout_s": 30,
      "idempotency_key": "hash(artifact)",
      "resources": {"cpu": "200m", "mem": "256Mi"},
      "metrics": {"counters": ["images_pushed"], "timers": ["duration_ms"]},
      "otel_spans": ["bwb.push"]
    }
  ],
  "dependencies": ["docker", "git"],
  "runbook": "docs/runbook.md",
  "failover": {"strategy": "brownout_then_rollback", "rpo_minutes": 5, "rto_minutes": 15},
  "rollback": {"guard": "Gate:RISK", "actions": ["revert:deployment", "restore:db_snapshot_t-1"]},
  "artifact_plan": [
    {"path": "dist/build-pipeline-stabilizer-bundle.zip", "contains": ["manifest", "contracts", "tests", "sbom", "runbook"]}
  ]
}
