{
  "$schema": "https://example.com/schemas/workflow_manifest_v1.json",
  "id": "bwb::dependabot-automerge::v1",
  "version": "1.0.0",
  "business_goal": "Automatically merge Dependabot pull requests to keep dependencies up to date",
  "value_hypothesis": "Automated merging reduces exposure window for vulnerable dependencies and saves developer time",
  "inputs": [
    {"name": "repo", "type": "text", "source": "api", "validation": "<owner>/<repo>"},
    {"name": "pr_number", "type": "text", "source": "manual", "validation": "\\d+"}
  ],
  "outputs": [
    {"name": "automerge_report", "type": "json", "retention_days": 90, "consumer": "devops"}
  ],
  "SLOs": {"latency_ms_p95": 1200, "success_rate": 0.99, "error_budget_month": 0.01},
  "constraints": ["must avoid branch conflicts", "only merge Dependabot-authored PRs"],
  "operational_env": "container",
  "security": {
    "data_classes": ["internal"],
    "secrets": ["ENV:GITHUB_TOKEN"],
    "iam": [{"principal": "workflow-sa", "permissions": ["pull-requests:write", "contents:write"]}],
    "supply_chain": {"sbom": true, "signing": "sigstore", "policy": "fail_on_critical"}
  },
  "compliance": {"pii": false, "gdpr": "n/a", "sox": "n/a", "hipaa": false},
  "tooling": {
    "images": ["ghcr.io/org/dependabot-automerge:1.0.0"],
    "runtimes": ["python3.11"],
    "libraries": ["requests", "pytest", "opentelemetry-sdk"]
  },
  "steps": [
    {
      "name": "automerge",
      "kind": "task",
      "entrypoint": "src/automerge.py:main",
      "contracts": {"in": ["inputs[*]"], "out": ["automerge_report"]},
      "retries": {"max": 1, "backoff": "exponential", "jitter": true},
      "timeout_s": 60,
      "idempotency_key": "hash(input)",
      "resources": {"cpu": "200m", "mem": "256Mi"},
      "metrics": {"counters": ["automerge_runs"], "timers": ["duration_ms"]},
      "otel_spans": ["bwb.automerge"]
    }
  ],
  "dependencies": ["https://api.github.com"],
  "runbook": "docs/runbook.md",
  "failover": {"strategy": "brownout_then_rollback", "rpo_minutes": 5, "rto_minutes": 15},
  "rollback": {"guard": "Gate:RISK", "actions": ["revert:deployment", "restore:automerge_state"]},
  "artifact_plan": [
    {"path": "dist/dependabot-automerge-bundle.zip", "contains": ["manifest", "contracts", "tests", "sbom", "runbook"]}
  ]
}
