{
  "id": "bwb::ci-workflow-diagnoser::v1",
  "version": "1.0.0",
  "business_goal": "Detect CI failures quickly",
  "steps": [
    {"name": "ingest", "kind": "task", "entrypoint": "src.ingest:main"},
    {"name": "scan", "kind": "task", "entrypoint": "src.scan:main"},
    {"name": "report", "kind": "task", "entrypoint": "src.report:main"}
  ],
  "security": {
    "supply_chain": {
      "sbom": true,
      "policy": "fail_on_critical"
    }
  },
  "artifact_plan": [
    {"path": "dist/ci-workflow-diagnoser-bundle.zip", "contains": ["manifest"]}
  ]
}
